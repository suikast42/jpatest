<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://jboss.org/schema/arquillian" xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
	<defaultProtocol type="Servlet 3.0" />
	<!-- <protocol type="jmx-as7"> -->
	<engine>
		<property name="deploymentExportPath">target/</property>
		<property name="maxTestClassesBeforeRestart">10</property>
	</engine>

	<container qualifier="jboss7-remote" default="true">
		<protocol type="Servlet 3.0">
			<property name="executionType">REMOTE</property>
		</protocol>
		<!-- <property name="serverConfig">${serverProfile}</property> -->
		<configuration>
			<property name="managementPort">${port.management:10009}</property>
		</configuration>
	</container>

	<container qualifier="jboss7-managed" default="false">
		<protocol type="Servlet 3.0">
			<property name="executionType">MANAGED</property>
		</protocol>
		<!-- <property name="serverConfig">${serverProfile}</property> -->
		<configuration>
			<property name="jbossHome">${testServer}</property>
			<property name="serverConfig">${serverProfile}</property>
			<property name="modulePath">${testServer}/modules</property>
			<property name="managementAddress">wmsserver</property>
			<property name="managementPort">${port.management:10009}</property>
			<property name="allowConnectingToRunningServer">true</property>
			<property name="javaVmArguments">-DdisableDomainListener=${disableDomainListener:true} -Xmx2048m  -Xms2048m -XX:MaxPermSize=512m  -Dfile.encoding=UTF8</property>
		</configuration>
	</container>

</arquillian>
